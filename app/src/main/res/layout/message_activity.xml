<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_message"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:loonggg="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.xzs.shareelectric_second.activity.MessageActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorTheme"
        android:layout_height="44dp">
        <ImageView
            android:layout_width="20dp"
            android:src="@mipmap/ic_back"
            android:id="@+id/message_back"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:text="我的消息"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <com.loonggg.rvbanner.lib.RecyclerViewBanner
        android:id="@+id/rv_banner_1"
        android:layout_width="match_parent"
        loonggg:rvb_autoPlaying="false"
        android:layout_height="200dp"
        tools:background="@color/colorPrimaryDark"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <ImageView
        android:layout_width="40dp"
        android:id="@+id/gongyi"
        android:src="@mipmap/ic_gongyizhongxin"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_height="30dp" />
    <ImageView
        android:layout_width="40dp"
        android:src="@mipmap/ic_youhuijuan"
        android:id="@+id/youhuijuan"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/yaoqing"
        android:layout_margin="10dp"
        android:layout_height="30dp" />
    <ImageView
        android:layout_width="40dp"
        android:id="@+id/yaoqing"
        android:src="@mipmap/ic_invite"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_height="30dp" />
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listview"
        android:layout_height="match_parent"/>
</LinearLayout>
